<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification 
    id="pucteam"
    os-version="0.8"
  
    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd' >

<structural-specification>

       <role-definitions> 
       		<role id="vehicle" />
       			<role id="car" > <extends role="vehicle"/>  </role>
       			<role id="drone" > <extends role="vehicle"/>  </role>
       			<role id="motorcycle" > <extends role="vehicle"/>  </role>
       			<role id="truck" > <extends role="vehicle"/>  </role>
        	<role id="initiator" />
        	<role id="bidder" />
       </role-definitions>
        
       <group-specification id="team">
            <roles>
                <role id="car" min="4" max="4"/>
                <role id="drone" min="4" max="4"/>
                <role id="motorcycle" min="4" max="4"/>
                <role id="truck" min="4" max="4"/>
                <role id="initiator" min="1" max="1"/>
                <role id="bidder" min="16" max="16"/>
            </roles>
            
             <formation-constraints>
    			<compatibility from="vehicle" to="initiator" type="compatibility" bi-dir="true" />
    			<compatibility from="vehicle" to="bidder" type="compatibility" bi-dir="true" />
    			<compatibility from="initiator" to="bidder" type="compatibility" bi-dir="true" />
 			</formation-constraints>
            
       </group-specification> 
       
</structural-specification>

